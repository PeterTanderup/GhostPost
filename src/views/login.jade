extends layout

block content
  h1= title
  p Welcome to #{title}
  ul
  each link in nav
    li
      a(href=link.Link) #{link.Text}
  div
    h3 Sign In
    form(name="signInForm" action="/auth/signIn" method="post")
      | User Name: 
      input(name="userName" id="useName")
      br
      | Password: 
      input(name="password" id="password")
      br
      input(type="submit" value="Sign in")
  div
    h3 Sign Up
    form(name="signUpForm" action="/auth/signUp" method="post")
      | User Name: 
      input(name="userName" id="useName")
      br
      | Password: 
      input(name="password" id="password")
      br
      input(type="submit" value="Sign up")